{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "BatchFileRename",
    "version": "0.2.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "clipboard": {
        "all": true
      },
      "shell": {
        "all": false
      },
      "fs": {
        "all": true,
        "scope": ["*"]
      },
      "os": {
        "all": true
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "window": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "Batch File Rename",
        "width": 1200,
        "height": 800,
        "minWidth": 600,
        "minHeight": 400
      }
    ],
    "cli": {
      "description": "Batch File Rename",
      "longDescription": "A batch file rename GUI application with split view for both source and target files.",
      "args": [
        {
          "name": "fileOrDirectory",
          "index": 1,
          "takesValue": true
        }
      ]
    },
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.caoccao.batch-file-rename",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
